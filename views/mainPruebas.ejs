                                            <p style="background-color: #000000 !important;" class="card-text pt-1 over mx-auto align-middle py-auto  list-group-item" >Estatus:</p>
                                            <p style="background-color: #000000 !important;" class="card-text px-auto over mx-auto align-middle py-auto  list-group-item"><%= p.estatus %></p>
                                        <% } %>
                                        <% if (p.estatus == "Desarrollo") { %>
                                            <p style="background-color: #48041b !important;" class="card-text bg-success col-sm px-auto over mx-auto align-middle py-auto  list-group-item"><%= p.estatus %></p>
                                        <% } %>

                                </div>
                                <p class="card-text"></p>
                            </div>
                        </div>
                    </div>
               
        <% } %>
    </div>
</div>
        <% } else { %>
            <h2>No hay proyectos registrados</h2>
        <% } %>  
</div>
</div>  

