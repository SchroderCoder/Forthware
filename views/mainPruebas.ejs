    <h1 class="p-2" >Pagina Principal</h1>
    <div class="p-3">
        <h3>Proyectos activos</h3>
        <% if (proyectos.length > 0) { %>
            <div class="p-5">
                <div class="row">
                    <% for (let  p of proyectos) { %>
                        <div class="col-sm-3 over">
                            <div class="card" style="width: auto;height: 22rem ; background-color: rgba(0,0,0,.2) !important; border-color: rgba(0,0,0,.0) !important ; ">
                            <div class="card-body textBlack">
                                <div class="row">
                                    
                                    <% if (p.importancia == "Alto") { %>
                                        <p class="card-text bg-success col-sm px-auto over mx-auto align-middle py-auto  list-group-item"><%= p.importancia %></p>
                                    <% } %>
                                    <% if (p.importancia == "Medio") { %>
                                        <p class="card-text bg-warning col-sm px-auto over mx-auto align-middle py-auto  list-group-item"><%= p.importancia %></p>
                                    <% } %>
                                    <% if (p.importancia == "Bajo") { %>
                                        <p class="card-text bg-light text-dark col-sm px-auto over mx-auto align-middle py-auto  list-group-item"><%= p.importancia %></p>
                                    <% } %>
                                </div>
                            </div>

                            <div class="circular--landscape"><img src="https://www.culemania.com/uploads/s1/22/99/96/91/los-jugadores-del-barca-celebran-el-aplastante-triunfo-contra-el-inter-de-miami-fcb.jpeg"></div>
                        
                        </div></div>    
                    <% } %>
                </div>   
            </div>   
        <% } else { %>
            <h2>No hay proyectos registrados</h2>
        <% } %>  
    </div>

    <% if (proyectos.length > 0) { %>
        <div class="p-5">
            <div class="row">
                <% for (let  p of proyectos) { %>
                    <div class="col-sm over">
                        <div class="card" style="width: auto ; background-color: rgba(0,0,0,.2) !important; border-color: rgba(0,0,0,.0) !important ; ">
                            <div class="card-body textBlack">
                                <div class="row">
                            
                                    <% if (p.importancia == "Alto") { %>
                                        <p class="card-text bg-success col-sm px-auto over mx-auto align-middle py-auto  list-group-item"><%= p.importancia %></p>
                                    <% } %>
                                    <% if (p.importancia == "Medio") { %>
                                        <p class="card-text bg-warning col-sm px-auto over mx-auto align-middle py-auto  list-group-item"><%= p.importancia %></p>
                                    <% } %>
                                    <% if (p.importancia == "Bajo") { %>
                                        <p class="card-text bg-light text-dark col-sm px-auto over mx-auto align-middle py-auto  list-group-item"><%= p.importancia %></p>
                                    <% } %>
                                </div>
                            </div>

                            <div class="circular--landscape "><img src="https://www.culemania.com/uploads/s1/22/99/96/91/los-jugadores-del-barca-celebran-el-aplastante-triunfo-contra-el-inter-de-miami-fcb.jpeg"></div>

                            <!-- <img src="<%= p.image_url %>"  class="card-img-top rounded-circle container" alt="" onerror="this.onerror=null; this.src='https://www.salonlfc.com/wp-content/uploads/2018/01/image-not-found-scaled-1150x647.png'"> -->
                            <h5 class="card-title text-dark text-center align-middle pt-3 " style="height:15%;  object-fit: cover; ;"><a href="/proyectos/editarProyecto/<%= p.id_proyecto %>" class="text-white" ><%= p.nombre %></a></h5>
                            <div class="card-body textBlack">
                                <div class="row "  >
                                        <% if (p.estatus == "Planeación") { %>
                                            <p style="background-color: #9B38CA !important;" class="card-text col-sm over mx-auto align-middle py-auto  list-group-item" ><%= p.estatus %></p>
                                        <% } %>
                                        <% if (p.estatus == "Diseño") { %>
                                            <p style="background-color: #00C4D0 !important;" class="card-text bg-success col-sm px-auto over mx-auto align-middle py-auto  list-group-item"><%= p.estatus %></p>
                                        <% } %>
                                        <% if (p.estatus == "Análisis") { %>
                                            <p style="background-color: #1A02AC !important;"class="card-text bg-success col-sm px-auto over mx-auto align-middle py-auto  list-group-item"><%= p.estatus %></p>
                                        <% } %>
                                        <% if (p.estatus == "Pruebas") { %>
                                            <p style="background-color: #ca3838 !important;" class="card-text bg-success col-sm px-auto over mx-auto align-middle py-auto  list-group-item"><%= p.estatus %></p>
                                        <% } %>
                                        <% if (p.estatus == "Mantenimiento") { %>
                                            <p style="background-color: #e0ce04 !important;" class="card-text bg-success col-sm px-auto over mx-auto align-middle py-auto  list-group-item"><%= p.estatus %></p>
                                        <% } %>
                                        <% if (p.estatus == "Construcción") { %>
                                            <p style="background-color: #DC6F0B !important;" class="card-text bg-success col-sm px-auto over mx-auto align-middle py-auto  list-group-item"><%= p.estatus %></p>
                                        <% } %>
                                        <% if (p.estatus == "Documentación") { %>
                                            <p style="background-color: #434342 !important;" class="card-text bg-success col-sm px-auto over mx-auto align-middle py-auto  list-group-item"><%= p.estatus %></p>
                                        <% } %>
                                        <% if (p.estatus == "Despliegue") { %>
                                            <p style="background-color: #0a752c !important;" class="card-text bg-success col-sm px-auto over mx-auto align-middle py-auto  list-group-item"><%= p.estatus %></p>
                                        <% } %>
