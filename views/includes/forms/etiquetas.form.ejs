<% if (proyectos=="") { %>
    <form action="crearEtiqueta" method="POST">
<% } else { %>
    <form action="/proyectos/editarEtiqueta" method="POST">
<%}%>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
    <fieldset>
        <legend>Datos de la etiqueta</legend>
            <input id="id" name="id" type="hidden" value="<%= proyectos.id_proyecto %>">
            <label for="nombre">Nombre: </label>
            <input id="nombre" name="nombre" maxlength="40" type="text" required>

    </fieldset>
    <br>
    <input type="submit" class="btn" value="Crear">

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" class="btn btn-danger" >Eliminar</button>
    
    
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Launch demo modal
    </button>
    
    <!-- Modal -->
    <div class="modal fade colorB" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
            Â¿Estas seguro de que quieres guardar los cambios?
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
        </div>
    </div>
</form>
