<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>     
<%- include('includes/sidebar.ejs') %>   
<h1>Entraste a tareas</h1>

<h3>Tareas</h3>
    <% if (tareas.length > 0) { %>
    <div class="container text-center">
        <div class="row bg-success text-white m-2 rounded">
            <div class="col">
                Fecha de creación
            </div>
            <div class="col-6">
                Descripción
            </div>
            <div class="col">
                Duración
            </div>
            <div class="col">
                Etiqueta
            </div>
        </div>
        <div class="row">
            <div class="col-sm over list-group-item">
                    <div class="overflow-auto anyClass" style="height: 34rem !important;">
                        <% for (let  t of tareas) { %>
                            <a href="/tareas/editarTarea/<%= t.id_tarea %>">
                                <div class="row bg-light text-dark m-2 border rounded">
                                    
                                    <div class="col border-right border-dark">
                                        <%=  new Date(t.fecha_creacion).toLocaleDateString("ES-mx") %>
                                    </div>
                                    <div class="col-6 border-right border-dark">
                                        <%=  t.descripcion %>
                                    </div>
                                    <div class="col border-right border-dark">
                                        <%=  t.duracion.toFixed(1) %>
                                    </div>
                                    <div class="col border-right border-dark">
                                        <%=  t.nombre %>
                                    </div>
                                </div>
                            </a>
                     <% } %>
                </div>
            </div>
        </div>
    </div>
    <% } else { %>
        <h2>No hay proyectos registrados</h2>
    <% } %>  
<br>
</div>
<div>
            <a href="/tareas/crearTarea" class="btn btn-success" button type="button">Crear tarea</a>
</div>
<%- include('includes/foot.ejs') %>