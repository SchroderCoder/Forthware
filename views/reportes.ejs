<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>   
<%- include('includes/sidebar.ejs') %>   


<div>
    <h3>Entraste a reportes</h3>
</div>

<h3>Reportes</h3>

<div class="p-3">
    <div class="row">
        <div class="col-10 pt-1 list-group-item">
            <div class="overflow-auto anyClass" style="height: 34rem !important;">
                <% if (reportes.length > 0) { %>
                    <div class="p-3">
                        <div class="row">
                        <% for (let  r of reportes) { %>
                            <div class="col-sm-4 pt-2 over">
                                <div class="" style="width: auto; height: 25rem ; ">
                                    <p class="card-title bg-success text-dark h-25 text-center align-middle py-auto  list-group-item"><a class="text-white" ><%= moment().format('dddd Do MMM YYYY') %></a></p>
                                    <img src="/media/templatereportes.png" class="card-img-top" alt="">
                    
                                </div>
                            </div>
                        <% } %>
                        </div>
                    </div>
                <% } else { %>
                    <h2>No hay reportes registrados</h2>
                <% } %>  
            </div>
        </div>
    </div>
</div>

<a href="/reportes/crearReporte" class="btn btn-success" button type="button">Crear reporte</button>

